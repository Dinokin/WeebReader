@inject ParametersManager ParameterManager
@model IEnumerable<Post>

@{
    ViewData["Title"] = Labels.Posts;
    ViewData["SegmentedPaginator"] = false;
    ViewData["PaginatorButtonSize"] = "small";
}

@section Headers
{
    <script>
    const deletionRoute = "@ViewData["DeletionRoute"]";
    const requestFailedLabel = "@OtherMessages.RequestFailed";
    </script>
    <script src="~/libs/weebreader/admin/blog-index.js" asp-append-version="true"></script>
}

@if (Model.Any())
{
    
@section TopRightSlot
{
    <a class="ui icon right floated mini positive button mt-0-1rem" href="@Url.Action("Add")">
        <i class="plus icon"></i>
    </a>
}

    <div class="ui basic mini modal">
        <div class="ui icon header">
            <i class="trash icon"></i>
            @Labels.ConfirmDeletion
        </div>
        <div class="content">
            <p>@OtherMessages.ConfirmDeletePost</p>
        </div>
        <div class="actions">
            <div class="ui cancel inverted button">
                <i class="times icon"></i>
                @Labels.No
            </div>
            <div class="ui ok green inverted button">
                <i class="check icon"></i>
                @Labels.Yes
            </div>
        </div>
    </div>
    <table class="ui unstackable very basic fixed single line center aligned table">
        <thead>
        <tr>
            <th>@Labels.Title</th>
            <th>@Labels.Date</th>
            <th>@Labels.Visibility</th>
            <th>@Labels.Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.ReleaseDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(post.Visible ? Labels.Visible : Labels.Hidden)</td>
                <td>
                    <div class="ui mini buttons">
                        <a class="ui icon primary button" href="@Url.Action("Edit", new {postId = post.Id})"><i class="pen icon"></i></a>
                        <a class="ui icon negative button" post-id="@post.Id"><i class="trash icon"></i></a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <partial name="_AdminPaginator"/>
}
else
{
    <div class="ui placeholder segment">
        <div class="ui icon header">
            <i class="newspaper icon"></i>
            @OtherMessages.NoPostExist
        </div>
        <a class="ui primary button" href="@Url.Action("Add")">@Labels.AddPost</a>
    </div>   
}