@model InstallerModel

@{
    Layout = "_SignInLayout";
}

@{
    ViewData["Title"] = Labels.Install;
    var successMessage = (IEnumerable<string>) TempData["SuccessMessage"];
    var errorMessage = (IEnumerable<string>) TempData["ErrorMessage"];
}

@section Headers
{
    <script>
    var usernameRequiredLabel = "@ValidationMessages.UsernameRequired";
    var minimumUsernameLengthLabel = "@ValidationMessages.MinimumUsernameLength";
    var emailRequiredLabel = "@ValidationMessages.EmailRequired";
    var validEmailRequiredLabel = "@ValidationMessages.ValidEmailRequired";
    var passwordRequiredLabel = "@ValidationMessages.PasswordRequired";
    var minimumPasswordLengthLabel = "@ValidationMessages.MinimumPasswordLength";
    var passwordsMustBeEqualLabel = "@ValidationMessages.PasswordsMustBeEqual";
    var requestFailedLabel = "@OtherMessages.RequestFailed";
    var installRoute = "@Url.Action("Install")";
    </script>
    <script src="~/libs/weebreader.1.0.1/main/install.js"></script>
}

<div class="ui middle aligned center aligned grid h-100p">
    <div class="column mw-450px">
        <h2 class="ui image header mt-minus-100px">
            <img class="image mt-minus-100px" src="~/assets/logo_l.png">
            <div class="content">
                @Labels.InstallWeebReader
            </div>
        </h2>
        <form class="ui large form" novalidate>
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" name="username" placeholder="@Labels.Username" asp-for="Username">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="email" name="email" placeholder="@Labels.EmailAddress" asp-for="Email">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="password" placeholder="@Labels.Password" asp-for="Password">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="repeatPassword" placeholder="@Labels.RepeatPassword">
                    </div>
                </div>
                <div class="ui fluid large black submit button">@Labels.Install</div>
            </div>
            @if (successMessage == null && errorMessage == null)
            {
                <div class="ui message error"></div>
            }
            else
            {
                <div class="ui message @(successMessage == null ? "error" : "success") visible">
                    <ul class="list">
                        @foreach (var item in successMessage ?? errorMessage)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </div>
            }
        </form>
    </div>
</div>