@inject IConfiguration Configuration
@inject ParametersManager ParameterManager

@{
    var siteName = await ParameterManager.GetValue<string>(Parameter.Types.SiteName);
    var siteDescription = await ParameterManager.GetValue<string?>(Parameter.Types.SiteDescription);
    var overridesVersion = Configuration.GetValue<ushort>("Web:OverrideVersion");
}

<!-- Standard Meta -->
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
<meta name="robots" content="noindex, nofollow">

<!-- Site Properties -->
<title>@ViewData["Title"] - @siteName</title>
@if (!string.IsNullOrWhiteSpace(siteDescription))
{
    <meta name="description" content="@siteDescription">
}
@if (Convert.ToBoolean(ViewData["AllowIndexing"]))
{
    <meta name="robots" content="noindex, nofollow">
}
<link rel="icon" href="~/assets/icon.png">
<link rel="stylesheet" href="~/libs/fomantic.2.8.4.css"/>
<link rel="stylesheet" href="~/libs/weebreader.1.4.css"/>
<link rel="stylesheet" href="~/libs/cookieconsent.3.1.1.css"/>
@if (overridesVersion > 1)
{
    <link rel="stylesheet" href="~/libs/overrides.@(overridesVersion).css"/>

}
<script src="~/libs/jquery-3.4.1.js"></script>
<script src="~/libs/jquery.serialize-object.2.5.0.js"></script>
<script src="~/libs/fomantic.2.8.4.js"></script>
<script src="~/libs/cookieconsent.3.1.1.js"></script>
<script src="~/libs/weebreader.1.1.js"></script>
<script>
$(() => {
    window.cookieconsent.initialise({
    "palette": {
        "popup": {
            "background": "#333"
            },
            "button": {
            "background": "#000000"
        }},
        "showLink": false,
        "theme": "edgeless",
        "position": "bottom-right",
        "content": {
        "message": "@OtherMessages.CookieNotice",
        "dismiss": "@Labels.CookieConfirmation"
    }});
});
</script>