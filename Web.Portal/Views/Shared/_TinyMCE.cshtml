<script src="~/libs/tinymce.min.5.2.1.js"></script>
@if (Labels.LangCode is var langCode && langCode != "en_US")
{
<script>
tinymce.init({
language: "@langCode",
selector: "textarea",
plugins: "autosave wordcount",
toolbar: "restoredraft wordcount",
height: 500
});
</script>
}
else
{
<script>
tinymce.init({
selector: "textarea",
plugins: "autosave wordcount",
toolbar: "restoredraft wordcount",
height: 500
});
</script>
}