@inject ParametersManager ParametersManager

@{
    var siteName = await ParametersManager.GetValue<string>(Parameter.Types.SiteName);
    var discordEnabled = await ParametersManager.GetValue<bool>(Parameter.Types.ContactDiscordEnabled);
    var discordLink = await ParametersManager.GetValue<string>(Parameter.Types.ContactDiscordLink);
    var blogEnabled = await ParametersManager.GetValue<bool>(Parameter.Types.PageBlogEnabled);
    var aboutEnabled = await ParametersManager.GetValue<bool>(Parameter.Types.PageAboutEnabled);
    var kofiEnabled = await ParametersManager.GetValue<bool>(Parameter.Types.PageAboutKofiEnabled);
    var patreonEnabled = await ParametersManager.GetValue<bool>(Parameter.Types.PageAboutPatreonEnabled);
    var emailSenderEnabled = await ParametersManager.GetValue<bool>(Parameter.Types.EmailSenderEnabled);
    var emailContactEnabled = await ParametersManager.GetValue<bool>(Parameter.Types.ContactEmailEnabled);
    var lightMode = ViewData["BodyClass"]?.ToString() != Constants.DarkModeClasses;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_SharedHeaders"/>
    <partial name="_GoogleAnalytics"/>
    <script>
    $(() => {
        $(".toggle").on("click", () => $(".mobile.only.grid .ui.vertical.menu").toggle(100));
    });
    </script>
    @await RenderSectionAsync("Headers", false)
</head>
<body class="@(ViewData["BodyClass"] ?? "background")">
<div class="ui computer only grid no-margin">
    <div class="ui top attached large borderless menu @(lightMode ? "inverted" : null) no-margin-left no-margin-right no-border-radius">
        <div class="ui container">
            <a class="item" href="/">
                <img src="~/assets/@(lightMode ? "logo_l" : "logo_d").png" alt="Logo"/>
            </a>
            <a id="titles" class="item menu-item" href="@Url.Action("Titles", "Home", new { titleId = string.Empty})">
                @Labels.Titles
            </a>
            @if (blogEnabled)
            {
                <a id="blog" class="item menu-item" href="@Url.Action("Blog", "Home")" >
                    @Labels.Blog
                </a>    
            }
            @if (aboutEnabled || kofiEnabled || patreonEnabled)
            {
                <a id="about" class="item menu-item" href="@Url.Action("About", "Home")" >
                    @Labels.About
                </a>   
            }
            @if (emailSenderEnabled && emailContactEnabled || discordEnabled)
            {
                <a id="contact" class="item menu-item" href="@Url.Action("Contact", "Home")">
                    @Labels.Contact
                </a>   
            }
        </div>
    </div>
</div>
<div class="ui tablet mobile only grid no-margin">
    <div class="ui top attached large borderless menu mobile-menu @(lightMode ? "inverted" : null) no-margin-left no-margin-right  no-border-radius">
        <a class="item" href="/">
            <img src="~/assets/@(lightMode ? "logo_l" : "logo_d").png" alt="Logo"/>
        </a>
        <div class="right menu">
            <div class="item">
                <button class="ui icon toggle @(lightMode ? "black" : null) button">
                    <i class="icon bars"></i>
                </button>
            </div>
        </div>
        <div class="ui vertical secondary fluid menu @(lightMode ? "inverted" : null)" style="display: none">
            <a id="titles-mobile" class="item menu-item" href="@Url.Action("Titles", "Home", new { titleId = string.Empty})">
                @Labels.Titles
            </a>
            @if (blogEnabled)
            {
                <a id="blog-mobile" class="item menu-item" href="@Url.Action("Blog", "Home")" >
                    @Labels.Blog
                </a>       
            }
            @if (aboutEnabled || kofiEnabled || patreonEnabled)
            {
                <a id="about-mobile" class="item menu-item" href="@Url.Action("About", "Home")" >
                    @Labels.About
                </a>   
            }
            @if (emailSenderEnabled && emailContactEnabled || discordEnabled)
            {
                <a id="contact-mobile" class="item menu-item" href="@Url.Action("Contact", "Home")">
                    @Labels.Contact
                </a>   
            }
        </div>
    </div>
</div>
<div class="ui hidden divider"></div>
<div class="ui fluid container">
    @RenderBody()
</div>
<div class="ui center aligned container">
    <footer>
        <div class="ui large @(ViewData["BodyClass"] == null ? null : lightMode ? "inverted" : null) label">
            © @DateTime.Now.Year @siteName
            @if (discordEnabled)
            {
                <a href="@discordLink">
                    <i class="discord big icon"></i>
                </a>
            }
            <a href="@Url.Action("IndexRss", "Home")">
                <i class="rss big fitted icon"></i>
            </a>
        </div>
    </footer>
</div>
</body>
</html>