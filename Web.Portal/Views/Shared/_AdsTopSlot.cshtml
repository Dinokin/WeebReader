@inject ParametersManager ParametersManager

@{
  var currentDate = DateTime.Now;
  var startDate = DateTime.Parse("2021-10-25");
  var endDate = DateTime.Parse("2021-10-31");
  var allowAlternateAds = ViewData["AllowAlternateAds"] as bool? ?? false;
  var useAlternateAds = currentDate >= startDate && currentDate <= endDate;
}

@if (await ParametersManager.GetValue<bool>(ParameterTypes.AdsEnabled))
{
    @if (allowAlternateAds && useAlternateAds)
    {
      <div class="font-sans">
        <div class="max-w-6xl mx-auto py-16 px-4 lg:px-0">
          <div class="bg-blue-700 rounded-lg shadow-xl overflow-hidden lg:grid lg:grid-cols-2 lg:gap-4">
            <div class="pt-4 pb-8 px-6 sm:pt-10 sm:px-10 lg:py-10 lg:pr-0 xl:py-14 xl:px-10">
              <div class="lg:self-center text-left">
                <h2 class="font-extrabold text-white mt-0">
                  <span class="block text-lg sm:text-xl">Want to keep up with new chapters?</span>
                  <span class="block text-xl sm:text-2xl">Use Kenmei to track Arang Scans releases!</span>
                </h2>
                <p class="mt-4 text-lg leading-6 text-blue-200">Track latest releases from Arang Scans and 26 other sites, all in one place.</p>
                <a href="https://www.kenmei.co/" class="mt-4 bg-white no-underline border border-transparent rounded-md shadow px-5 py-3 inline-flex items-center text-base font-medium text-blue-600 hover:bg-blue-50">Sign up for free</a>
              </div>
            </div>
            <div class="bg-white aspect-w-4 aspect-h-2 md:aspect-w-3 md:aspect-h-1">
              <img class="image-ad transform translate-x-12 translate-y-6 object-cover object-left-top rounded-r-md sm:translate-x-16 lg:translate-y-28" src="https://kenmei-assets.s3.eu-west-2.amazonaws.com/flame-ad-final.jpg" alt="App screenshot">
            </div>
          </div>
        </div>
      </div>
    }
    else
    {
        <div class="ui container">
            @Html.Raw(await ParametersManager.GetValue<string>(ParameterTypes.AdsTopSlot))
        </div>
    }
}