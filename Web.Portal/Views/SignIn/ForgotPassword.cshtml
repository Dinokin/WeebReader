@model EmailModel

@{
    ViewData["Title"] = Labels.ForgotPassword1;
}

@section Headers
{
    <script>
    const emailRequiredLabel = "@ValidationMessages.EmailRequired";
    const validEmailRequiredLabel = "@ValidationMessages.ValidEmailRequired";
    const requestFailedLabel = "@OtherMessages.RequestFailed";
    const actionRoute = "@Url.Action("ForgotPassword")";
    </script>
    <script src="~/libs/weebreader/main/forgot-password.js" asp-append-version="true"></script>
}

<div class="ui middle aligned center aligned grid h-100p">
    <div class="column mw-450px">
        <h2 class="ui image header mt-minus-100px">
            <img class="image mt-minus-100px" src="~/assets/logo_d.png" alt="@Labels.Logo" asp-append-version="true">
            <div class="content">
                @Labels.RecoverPassword
            </div>
        </h2>
        <form class="ui large form" novalidate>
            <div class="ui segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="email" name="email" placeholder="@Labels.EmailAddress" asp-for="Email">
                    </div>
                </div>
                <div class="ui fluid large black submit button">@Labels.RecoverPassword</div>
            </div>
            <div class="ui message error"></div>
        </form>
    </div>
</div>