@model EmailModel

@{
    ViewData["Title"] = "Forgot Password";
}

@section Headers
{
    <script>
    $(() => {
        let messageContainer = $(".form .message");
        
        $(".form").form({
        on: "blur",
        fields: {
            email: {
                identifier: "email",
                rules: [
                    {
                        type: "empty",
                        prompt: "An e-mail address is required."
                        },
                        {
                            type: "email",
                            prompt: "A valid e-mail address is required."
                        }
                        ]
            }
        }
        }).api({
        url: "@Url.Action("ForgotPassword")",
        serializeForm: true,
        method: "POST",
        onSuccess: (response) => window.location.href = response.destination,
        onFailure: (response) => addError(messageContainer, response),
        onerror: () =>  addGenericError(messageContainer)
        });
    });
    </script>
}

<div class="ui middle aligned center aligned grid height-100">
    <div class="column max-width-450">
        <h2 class="ui image header margin-top-minus-100">
            <img class="image margin-top-minus-100" src="~/assets/logo.png" alt="Logo">
            <div class="content">
                Insert your e-mail
            </div>
        </h2>
        <form class="ui large form" novalidate>
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="email" name="email" placeholder="Email Address" asp-for="Email">
                    </div>
                </div>
                <div class="ui fluid large black submit button">Recover Password</div>
            </div>
            <div class="ui message error"></div>
        </form>
    </div>
</div>