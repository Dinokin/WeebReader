@model ResetPasswordModel

@{
    ViewData["Title"] = "Change Password";
}

@section Headers
{
    <script>
    $(() => {
        let messageContainer = $(".form .message");
        
        $(".form").form({
        on: "blur",
        fields: {
            newPassword: {
                identifier: "newPassword",
                rules: [
                    {
                        type: "empty",
                        prompt: "A new password is required."
                    },
                    {
                        type: "minLength[8]",
                        prompt: "The password must have at least 8 characters."
                    }
                ]
            },
            repeatNewPassword: {
                identifier: "repeatNewPassword",
                rules: [
                    {
                        type: "match[newPassword]",
                        prompt: "The passwords must be equal."
                    }
                ]
            }
        }
        }).api({
        url: "@Url.Action("ProcessResetPassword")",
        serializeForm: true,
        method: "PATCH",
        onSuccess: (response) => window.location.href = response.destination,
        onFailure: (response) => addError(messageContainer, response),
        onerror: () =>  addGenericError(messageContainer)
        });
    });
    </script>
}

<div class="ui middle aligned center aligned height-100">
    <div class="column max-width-450">
        <h2 class="ui image header margin-top-minus-100">
            <img class="image margin-top-minus-100" src="~/assets/logo.png" alt="Logo">
            <div class="content">
                Change your password
            </div>
        </h2>
        <form class="ui large form" novalidate>
            <input type="hidden" name="userId" asp-for="UserId"/>
            <input type="hidden" name="token" asp-for="Token"/>
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="newPassword" placeholder="New Password" asp-for="NewPassword">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="repeatNewPassword" placeholder="Repeat the Password">
                    </div>
                </div>
                <div class="ui fluid large black submit button">Change Password</div>
            </div>
            <div class="ui message error"></div>
        </form>
    </div>
</div>